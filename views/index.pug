extends layout.pug

block content
  article.portfolio-intro
    h1 My Portfolio
    p Maria's EPIC portfolio of projects
  article.portfolio-project-thumbs
    .projects-box.box.grid
      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}`, alt=`A thumbnail of ${project.project_name}`)
            h5= project.project_name